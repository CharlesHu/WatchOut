<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When the angle is more than 45, it plays the ringtone." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/subtractCountDownButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="subtract" />

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining: 5s" />

        <Button
            android:id="@+id/addCountDownButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add" />

    </LinearLayout>

    <Button
        android:id="@+id/startListening"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Listening" />

    <Button
        android:id="@+id/stopPlaying"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Playing" />

</LinearLayout>